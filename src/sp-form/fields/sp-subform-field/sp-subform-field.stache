<div class="form-group">
  <fieldset>
    {{#if(label}}<legend>{{label}}</legend>{{/if}}
    <sp-form inline:from="inline" 
      object:bind="value" 
      on:fieldchange="saveField(scope.arguments)" 
      fields:from="formFields">
      <can-template name="submit"><i /></can-template>
    </sp-form>
  </fieldset>
</div>
